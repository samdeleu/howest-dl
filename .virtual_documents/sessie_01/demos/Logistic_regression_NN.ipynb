age_max = X[:,1].max()+2
xx, yy = np.meshgrid(np.arange(job_satisfaction_min, job_satisfaction_max, h),np.arange(age_min, age_max, h))

xy = np.vstack([xx.ravel(), yy.ravel()]).T

xys = scaler.transform(xy)

Zn = model.predict_classes(xys).reshape(xx.shape)



